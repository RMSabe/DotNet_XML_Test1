<Page x:Class="CompStock.CompDetailPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:CompStock"
	mc:Ignorable="d">

	<Grid>
		<TextBlock
			Name="_TextBlock1"
			HorizontalAlignment="Center"
			VerticalAlignment="Top"
			Margin="50"
			FontSize="35"
			TextAlignment="Center"/>

		<TextBlock
			Name="_TextBlock2"
			HorizontalAlignment="Center"
			VerticalAlignment="Top"
			Margin="120"
			FontSize="12"
			TextAlignment="Left"/>

		<Button
			Name="_Button1"
			HorizontalAlignment="Center"
			VerticalAlignment="Bottom"
			Width="200"
			Height="20"
			Margin="100"
			Content="Return"
			Click="onButton1Clicked"/>

		<Button
			Name="_Button2"
			HorizontalAlignment="Center"
			VerticalAlignment="Bottom"
			Width="200"
			Height="20"
			Margin="130"
			Content="View Datasheet"
			Click="onButton2Clicked"/>
	</Grid>
</Page>
